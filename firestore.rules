rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin users (custom claim admin:true) can read everything
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // All collections â€” admin full read, write restricted per collection
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
